[user]
	email = matjaz@finzgar.net
	name = Matjaž Finžgar
[commit]
	gpgSign = true
[push]
	default = simple
[alias]
	graph = log --graph --color --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n"
	one = log --oneline --all
	stat = status -sb
	last = show -1
	unstage = reset HEAD --
	cached = diff --cached
	d = difftool
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[color]
	ui = auto
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[submodule]
	recurse = true
