[colors]
background = ${xrdb:background:#000000}
foreground = ${xrdb:foreground:#ffffff}
green = ${xrdb:color2:#ffffff}
red = ${xrdb:color1:#ffffff}
yellow = ${xrdb:color3:#ffffff}
blue = ${xrdb:color4:#ffffff}
magenta = ${xrdb:color5:#ffffff}
cyan = ${xrdb:color6:#ffffff}
lblack = ${xrdb:color8:#ffffff}
primary = ${xrdb:color6:#ffffff}
alert = ${xrdb:color1:#ff0000}
transparent = #66000000

[bar/primary]
monitor = ${env:MONITOR}
width = 100%
height = 20
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 1
module-margin-right = 1

font-0 = Hack Nerd Font:pixelsize=10;3
font-2 = Font Awesome 5 Free:pixelsize=10

modules-left = bspwm production borg openvpn hue spotify
modules-center = xwindow
modules-right = trola battery_0 battery_1 volume date powermenu

tray-position = right
tray-padding = 1

override-redirect = false
wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/openvpn]
type = custom/script
interval = 5
label = %output%
exec = echo " VPN ON "
label-background = ${colors.green}
label-foreground = ${colors.background}
exec-if = pgrep openvpn > /dev/null

[module/production]
type = custom/script
interval = 5
label = %output%
exec = echo " PRODUCTION "
label-background = ${colors.alert}
label-foreground = ${colors.background}
exec-if = ps a | grep "[s]sh prod" > /dev/null

[module/hue]
type = custom/script
interval = 5
label = %output%
exec = bash $HOME/.config/polybar/hue_status.sh
exec-if = [ $(curl http://ipinfo.io/ip) == $PRIVATE_HOME_IP ]

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.green}
format = %{A1:playerctl play-pause:}<label>%{A}
exec = python $HOME/.config/polybar/spotify_status.py -f '{artist} - {song}' -t 120

[module/trola]
type = custom/script
interval = 60
label = %output%
format-prefix = " "
format-prefix-foreground = ${colors.green}
exec = trola
exec-if =  [ $(curl http://ipinfo.io/ip) == $PRIVATE_WORK_IP ]

[module/borg]
type = custom/script
interval = 5
label = %output%
exec = echo " borg running! "
label-background = ${colors.alert}
label-foreground = ${colors.background}
exec-if = pgrep borg > /dev/null

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
format-prefix = " "
format-prefix-foreground = ${colors.cyan}

[module/volume]
type = internal/pulseaudio

label-volume = %percentage%%
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.blue}

label-muted = muted
format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.alert}

[module/bspwm]
type = internal/bspwm

format = <label-state>

label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.primary}
label-empty-padding = 1

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d.%m.%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.yellow}

label = %date% %time%

[module/battery_1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 750

[module/battery_0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 750

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = " "
label-open-foreground = ${colors.alert}
label-close = 
label-close-foreground = ${colors.alert}
label-separator = |
label-separator-foreground = ${colors.primary}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = suspend
menu-0-2-exec = menu-open-3

menu-1-0 = Confirm reboot!
menu-1-0-exec = systemctl reboot

menu-2-0 = Confirm power off!
menu-2-0-exec = systemctl poweroff

menu-3-0 = Confirm suspend!
menu-3-0-exec = systemctl suspend

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
