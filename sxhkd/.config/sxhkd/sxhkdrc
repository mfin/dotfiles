# WM

super + Escape
	pkill -USR1 -x sxhkd

super + alt + Escape
	pkill -x panel; bspc quit

super + shift + Escape
	pkill -x panel; $HOME/.config/bspwm/panel

super + {_,shift + }w
	bspc node -{c,k}

super + m
	bspc desktop -l next

super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

super + g
	bspc node -s biggest

super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + {_,shift + }c
	bspc node -f {next,prev}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + {cedilla,Tab}
	bspc {node,desktop} -f last

super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + ctrl + space
	bspc node -p cancel

super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

~button1
	bspc node -f pointed

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u



# CUSTOM

super + Return
	urxvt

super + space
	rofi -show run

super + shift + Return
	xscreensaver-command --lock

super + shift + space
	$HOME/.bin/rofi_session.sh

super + {F3,F1}
	CUR_DESKTOP=$(bspc query -d -D); \
    PADDING=$(bspc config -d $CUR_DESKTOP left_padding); \
    NEW_PADDING=$(echo "$PADDING {-,+} 5" | bc); \
    bspc config -d $CUR_DESKTOP left_padding $NEW_PADDING; \
    bspc config -d $CUR_DESKTOP right_padding $NEW_PADDING;

super + {F4,F2}
	CUR_DESKTOP=$(bspc query -d -D); \
    PADDING=$(bspc config -d $CUR_DESKTOP top_padding); \
    NEW_PADDING=$(echo "$PADDING {-,+} 5" | bc); \
    bspc config -d $CUR_DESKTOP top_padding $NEW_PADDING; \
    bspc config -d $CUR_DESKTOP bottom_padding $NEW_PADDING;

super + F5
	CUR_DESKTOP=$(bspc query -d -D); \
	bspc config -d $CUR_DESKTOP right_padding 0; \
	bspc config -d $CUR_DESKTOP left_padding 0;

super + F6
	CUR_DESKTOP=$(bspc query -d -D); \
	bspc config -d $CUR_DESKTOP top_padding 0; \
	bspc config -d $CUR_DESKTOP bottom_padding 0;

super + shift + {F1,F2}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

super + ctrl + BackSpace
	bspc node @/ -R 90

XF86MonBrightnessUp
	xbacklight +10

XF86MonBrightnessDown
	xbacklight -10

XF86AudioLowerVolume
	$HOME/.bin/volume down 5

XF86AudioRaiseVolume
	$HOME/.bin/volume up 5

super + ctrl + Next
	$HOME/.bin/volume down 5

super + ctrl + Prior
	$HOME/.bin/volume up 5

XF86AudioMute
	$HOME/.bin/volume mute

XF86AudioMicMute
    pulseaudio-ctl mute-input

super + ctrl + Right
	$HOME/.bin/volume next

super + ctrl + Left
	$HOME/.bin/volume prev

super + ctrl + Up
	$HOME/.bin/volume play

super + ctrl + Down
	$HOME/.bin/volume stop

Print
	xfce4-screenshooter

super + q; {w,f,e,s,a}
	{qutebrowser,urxvt -e ranger,code,xfce4-screenshooter,pavucontrol}

super + alt + minus
	hue_toggle 2

super + alt + space
	clipster -s -c
